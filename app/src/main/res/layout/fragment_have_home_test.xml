<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/editarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:hint="Area/Sector" />

        <EditText
            android:id="@+id/editrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:hint="Rent" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/editphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Add Photo"
            android:textSize="20dp" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/fab_margin"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_menu_camera" />
</RelativeLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/editImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_menu_gallery">
        </ImageView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="left"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rooms"
            android:id="@+id/myRoomTextViewDummy"
            android:textSize="20dp"/>

        <RelativeLayout
            android:id="@+id/relativelaout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/mydecrementbuttonfragmet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus_black" />
        <TextView
            android:id="@+id/myroomsrequiredTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mydecrementbuttonfragmet"
            android:hint="0"
            android:padding="10dp"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/myincrementbuttonfragmet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myroomsrequiredTextView"
            android:src="@drawable/ic_plus_black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relativelaout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                layout="@layout/snippet_havhome_fragment_gridview_entities"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"></include>
        </RelativeLayout>
    </RelativeLayout>

    </LinearLayout>


</RelativeLayout>