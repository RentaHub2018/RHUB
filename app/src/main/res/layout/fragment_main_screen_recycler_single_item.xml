<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:background="@color/colorBlack"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/cardViewMainFragmentImageView"
        android:layout_margin="5dp"
        android:layout_width="@dimen/fragment_main_recycler_single_item_image_size"
        android:layout_height="@dimen/fragment_main_recycler_single_item_image_size" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cardViewMainFragmentAreaTextView"
            android:textSize="25dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Area"/>
        <TextView
            android:id="@+id/cardViewMainFragmentRentTextView"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:text="Rent"/>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>